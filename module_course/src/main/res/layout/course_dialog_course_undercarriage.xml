<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="294dp"
    android:layout_height="338dp"
    android:background="@drawable/public_bg_white_round_10"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="14.5dp"
        android:layout_height="14.5dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/commom_20dp"
        android:layout_marginEnd="15.5dp"
        android:src="@drawable/public_ic_close"
        android:tint="#FFB1B1B1" />

    <FrameLayout
        android:layout_width="262dp"
        android:layout_height="210dp"
        android:layout_marginTop="6.5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172.5dp"
            android:src="@drawable/public_bg_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="21.5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/course_undercarriage_not_allow_learn"
            android:textColor="#ff666666"
            android:textSize="15sp" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/PublicButton"
        android:layout_width="180dp"
        android:layout_height="@dimen/commom_40dp"
        android:layout_marginTop="@dimen/commom_13dp"
        android:text="@string/public_i_known" />


</LinearLayout>