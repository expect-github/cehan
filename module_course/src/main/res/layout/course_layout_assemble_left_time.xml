<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_assemble_info"
    android:background="@drawable/course_bg_assemble_left_time"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/commom_3dp"
    android:layout_height="67dp">


    <com.nj.baijiayun.module_public.widget.PriceTextView
        android:textSize="@dimen/commom_20dp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:id="@+id/tv_assemble_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        tools:text="￥89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="@dimen/commom_12dp"
        android:textColor="@color/public_price"
        android:gravity="center"
        android:paddingRight="@dimen/commom_6dp"
        android:paddingLeft="@dimen/commom_6dp"
        android:background="@drawable/public_bg_white_round_10"
        android:id="@+id/tv_assemble_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/commom_17dp"
        android:layout_marginBottom="9dp"
        tools:text="4人团"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_assemble_price" />

    <com.nj.baijiayun.module_public.widget.PriceTextView
        android:includeFontPadding="false"
        android:id="@+id/tv_assemble_under_line_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        tools:text="￥100.00"
        android:textColor="#B2ffffff"
        android:textSize="@dimen/commom_12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_assemble_price"
        app:layout_constraintStart_toEndOf="@+id/tv_assemble_price"
        app:layout_constraintTop_toTopOf="@+id/tv_assemble_price" />

    <TextView
        android:id="@+id/tv_assemble_join_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/commom_14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_assemble_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_assemble_price"
        tools:text="已拼3000+" />

    <TextView
        android:id="@+id/tv_assemble_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_assemble_number"
        app:layout_constraintEnd_toEndOf="@+id/tv_assemble_join_number"
        app:layout_constraintTop_toTopOf="@+id/tv_assemble_number"
        tools:text="1天 08 : 23 ：23" />

    <ImageView
        android:id="@+id/course_imageview"
        android:layout_width="11dp"
        android:layout_height="@dimen/commom_13dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_assemble_left_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_assemble_left_time"
        app:layout_constraintTop_toTopOf="@+id/tv_assemble_left_time"
        app:srcCompat="@drawable/course_ic_assemble_left_time" />
</androidx.constraintlayout.widget.ConstraintLayout>