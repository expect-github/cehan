<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/CommonToolBarBarStyle</item>
        <item name="colorControlActivated">@color/common_main_color</item>


    </style>


    <style name="CommonToolBarBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--设置标题距返回按钮间距-->

    </style>




    <style name="CommonButtonNoRoud">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/common_btn_default_no_round</item>
        <item name="android:textSize">@dimen/common_title_btn</item>

    </style>

    <style name="CommonButtonStroke">
        <item name="android:textColor">@color/common_main_color</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/common_btn_stroke</item>
        <item name="android:textSize">@dimen/common_title_btn</item>

    </style>


</resources>