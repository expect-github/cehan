<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                xmlns:toos="http://schemas.android.com/tools"
                android:background="@android:color/white"
                android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/cb_delete" />

    <TextView
        toos:text="雅思七日入门（二）"
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/iv_type"
        android:textColor="@color/common_main_text_color_title"
        android:textSize="16sp" />

    <TextView
        toos:text="97分钟 | 354.77M"
        android:id="@+id/tv_download_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@id/iv_type"
        android:textColor="@color/common_main_text_color_content"
        android:textSize="12sp" />
</RelativeLayout>