<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/commom_20dp"
              android:background="@drawable/public_bg_white_round_4"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/commom_18dp"
        android:layout_marginRight="@dimen/commom_15dp"
        android:src="@drawable/public_ic_close_coupon_or_comment"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/commom_20dp"
        android:layout_marginTop="@dimen/commom_17dp"
        android:layout_marginEnd="@dimen/commom_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星级："
            android:textColor="#ff595959"
            android:textSize="13sp"
            />

        <com.nj.baijiayun.module_common.widget.MyRatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commom_4dp"
            app:common_starEmpty="@drawable/public_ic_star_not_fill"
            app:common_starFill="@drawable/public_ic_star_fill"
            app:common_starImageSize="14dp"
            app:common_starStep="5"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/commom_20dp"
        android:layout_marginTop="@dimen/commom_30dp"
        android:layout_marginEnd="@dimen/commom_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="内容："
            android:textColor="#ff595959"
            android:textSize="13sp"
            />

        <EditText
            android:id="@+id/etv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/commom_4dp"
            android:background="@drawable/public_bg_comment_etv"
            android:gravity="left|top"
            android:padding="@dimen/commom_10dp"
            android:textSize="13sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="88dp"
        android:layout_height="@dimen/commom_28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/commom_30dp"
        android:background="@drawable/public_bg_main_color_round_4"
        android:text="发布"
        android:textColor="@color/white"/>


</LinearLayout>
