<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="261dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <RelativeLayout

        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_marginTop="@dimen/commom_24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cover"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/public_bg_upgrade" />
        <View
            android:layout_below="@+id/iv_cover"
            android:background="@drawable/public_bg_white_round_10_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_28dp"
                android:layout_marginTop="@dimen/commom_15dp"
                android:includeFontPadding="false"
                android:text="发现新版本"
                android:textColor="#ffffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/commom_28dp"
                android:includeFontPadding="false"
                tools:text="V7.7"
                android:textColor="#ffffffff"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:text="本次更新"
                android:textColor="#ff363837"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/commom_30dp"
                android:layout_marginTop="@dimen/commom_12dp"
                android:layout_marginRight="@dimen/commom_30dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                tools:text="- 题目支持收纠错：藏\n- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏\n- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏\n- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏\n- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏- 题目支持收纠错：藏"
                android:textColor="#ff8c8c8c"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_upgrade"
                style="@style/PublicButton"
                android:layout_width="124dp"
                android:layout_height="@dimen/commom_31dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/commom_20dp"
                android:layout_marginBottom="@dimen/commom_20dp"
                android:text="立即更新">

            </Button>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/commom_16dp"
        android:src="@drawable/public_ic_upgrade_fly" />

    <View
        android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_height="@dimen/commom_30dp"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/commom_25dp"
        android:layout_height="@dimen/commom_25dp"
        android:layout_below="@+id/view_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/public_ic_upgrade_close" />

</RelativeLayout>