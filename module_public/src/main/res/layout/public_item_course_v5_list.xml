<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/commom_10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/commom_40dp"
        android:layout_height="@dimen/commom_40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/common_default_head" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_course_head"
            android:layout_width="@dimen/commom_40dp"
            android:layout_height="@dimen/commom_40dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="0dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_course_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commom_10dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/commom_14sp" />
</LinearLayout>