<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/public_line"
        android:layout_width="@dimen/commom_10dp"
        android:layout_height="@dimen/commom_1dp"
        android:background="@color/public_FFB7B7B7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/public_bg_time_range"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="@string/public_start_time"
        android:textColor="@color/common_color_BFBFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/public_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/public_textview7"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/public_bg_time_range"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="@string/public_end_time"
        android:textColor="@color/common_color_BFBFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/public_line"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/public_imageview4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_time_start"
        app:layout_constraintEnd_toEndOf="@+id/tv_time_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_start"
        app:srcCompat="@drawable/public_ic_item_time"/>

    <ImageView
        android:id="@+id/public_imageview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/public_textview7"
        app:layout_constraintEnd_toEndOf="@+id/public_textview7"
        app:layout_constraintTop_toBottomOf="@+id/public_textview7"
        app:srcCompat="@drawable/public_ic_item_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>