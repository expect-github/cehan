<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:background="@drawable/public_bg_white_round_10">


    <com.nj.baijiayun.basic.widget.RoundImageView
        android:id="@+id/iv_cover"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_marginEnd="18dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/commom_5dp"
        app:round_type="round" />

    <TextView
        android:id="@+id/tv_browse_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/public_FF8C8C8C"
        android:textSize="@dimen/design_content_support_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        tools:text="1345" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="2"
        android:maxLines="1"
        android:textColor="#FF20242A"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/iv_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        tools:text="国家七日大事件国家七日大事件国家七日大事件国家七日大事件国家七日大事件" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/design_text_support"
        android:textSize="@dimen/design_content_support_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        tools:text="1234222" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/public_FF8C8C8C"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="35dp"
        tools:text="如果你还在学习，还在奋斗，那么你就是有为年
的这社会需要你，民强则国强，努力奋斗的得的的" />

    <include
        layout="@layout/public_layout_list_split_line"
        android:layout_height="@dimen/design_list_line"
        android:layout_width="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>




