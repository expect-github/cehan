<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/public_bg_white_round_10"
    android:layout_marginLeft="@dimen/commom_15dp"
    android:layout_marginRight="@dimen/commom_15dp"
    android:layout_height="84dp"
   >

    <com.nj.baijiayun.basic.widget.RoundImageView
        android:id="@+id/iv_cover"
        android:layout_width="104dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/commom_5dp"
        app:round_type="round" />


    <TextView
        android:textSize="12sp"
        android:textColor="@color/public_FF8C8C8C"
        android:id="@+id/tv_browse_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_browse"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_browse"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_browse"
        tools:text="1345" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="11dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="#FF20242A"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        tools:text="国家七日大事件国家七日大事件国家七日大事件国家七日大事件国家七日大事件" />

    <ImageView

        android:id="@+id/iv_icon_browse"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        app:srcCompat="@drawable/public_ic_eye_open" />

    <ImageView
        android:id="@+id/libraryImageview5"
        android:layout_width="@dimen/commom_9dp"
        android:layout_height="@dimen/commom_9dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        app:srcCompat="@drawable/public_ic_item_time" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/public_FF8C8C8C"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_browse_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_browse_num"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        tools:text="1234222" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/public_FF8C8C8C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="如果你还在学习，还在奋斗，那么你就是有为年
的这社会需要你，民强则国强，努力奋斗的得的的" />
</androidx.constraintlayout.widget.ConstraintLayout>




