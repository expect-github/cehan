<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commom_22dp"
        android:layout_marginRight="@dimen/commom_22dp"
        android:background="@drawable/classfiy_withe_10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_classfiy_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="14.5dp"
            android:paddingRight="14.5dp"
            android:paddingLeft="@dimen/commom_8dp"
            android:src="@drawable/delete_baidu"
            android:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/commom_12dp"
            android:gravity="center"
            android:text="设置排序类型"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_classfiy_recycler"
            android:layout_marginBottom="@dimen/commom_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/commom_20dp"
            android:layout_marginRight="@dimen/commom_20dp" />
    </LinearLayout>
</LinearLayout>